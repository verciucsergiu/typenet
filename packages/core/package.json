{
  "name": "@typenet/core",
  "version": "0.0.3",
  "description": "@typenet/core package",
  "main": "lib/src/index.js",
  "typings": "lib/src/index.d.ts",
  "scripts": {
    "build": "npm run remove-lib && npm run compile && npm run remove-lib-tests",
    "prepare": "npm run build",
    "test": "mocha --require ts-node/register tests/**/*.ts",
    "remove-lib": "if exist \"lib\" rd /S /Q lib",
    "remove-lib-tests": "rd /S /Q \"lib/tests\" && move \"lib/src\" \"lib/\"",
    "compile": "tsc -p ."
  },
  "author": "Sergiu Verciuc",
  "license": "ISC",
  "dependencies": {
    "http": "0.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "5.2.6",
    "@types/node": "11.11.3",
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "mock-req": "^0.2.0",
    "mock-res": "^0.5.0",
    "sinon": "^7.3.2",
    "ts-node": "^8.1.0",
    "typescript": "3.4.3"
  },
  "files": [
    "lib/src/**/*"
  ]
}
